<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Categories">

    <TextView
        android:id="@+id/categories_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/categoriesLanguage_string"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.05" />

    <Button
        android:id="@+id/categories1_button"
        android:layout_width="140dp"
        android:layout_height="160dp"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:text="@string/categories_string"
        app:layout_constraintEnd_toStartOf="@id/categories2_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/categories_textView"
        tools:ignore="DuplicateSpeakableTextCheck" />

    <Button
        android:id="@+id/categories2_button"
        android:layout_width="140dp"
        android:layout_height="160dp"
        android:layout_marginTop="40dp"
        android:text="@string/categories_string"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/categories1_button"
        app:layout_constraintTop_toBottomOf="@+id/categories_textView" />
    <Button
        android:id="@+id/categories3_button"
        android:layout_width="140dp"
        android:layout_height="160dp"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:text="@string/categories_string"
        app:layout_constraintEnd_toStartOf="@id/categories2_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/categories1_button" />

    <Button
        android:id="@+id/categories4_button"
        android:layout_width="140dp"
        android:layout_height="160dp"
        android:layout_marginTop="40dp"
        android:text="@string/categories_string"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/categories1_button"
        app:layout_constraintTop_toBottomOf="@+id/categories2_button" />

</androidx.constraintlayout.widget.ConstraintLayout>