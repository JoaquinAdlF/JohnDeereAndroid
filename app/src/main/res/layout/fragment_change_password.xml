<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChangePassword">

    <TextView
        android:id="@+id/changePass_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/changePass_string"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.120" />

    <Button
        android:id="@+id/changePass_button"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:layout_marginTop="375dp"
        android:text="@string/changePass_string"
        app:layout_constraintBottom_toTopOf="@+id/back_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/changePass_textView" />

    <Button
        android:id="@+id/back_button"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:layout_marginTop="30dp"
        android:text="@string/back_string"
        app:layout_constraintEnd_toEndOf="@+id/changePass_button"
        app:layout_constraintStart_toStartOf="@+id/changePass_button"
        app:layout_constraintTop_toBottomOf="@id/changePass_button" />

</androidx.constraintlayout.widget.ConstraintLayout>